<div class="container-fluid no-pad events-detail">
  <div class="row no-pad">
    <div class="col-md-3 sidebar">
      <p>
        <%= fa_icon 'ticket' %>
        Price
      </p>
      <h1> Hot Events </h1>
      <div class="ticket-list">
        <% @event.ticket_types.each do |ticket_type| %>
          <div class="row">
            <div class="col-md-6">
              <%= ticket_type.name %>
            </div>

            <div class="col-md-6 price text-right">
              <%= number_to_currency(ticket_type.price, unit: 'VND', precision: 0) %>
            </div>
          </div>
          <div class="clearfix"></div>
        <% end %>
        <%= link_to new_event_ticket_order_path(@event) do %>
          <button class='btn btn-lg btn-block btn-danger'> BOOK NOW </button>
        <% end %>
        
        <% if !current_user.nil? && @event.user_id == current_user.id %>
          <div>            
            <div>
              <%= link_to 'Create Ticket Type', new_event_ticket_type_path(@event)  %>
            </div>
            <% if @event.published_at.nil? %>
              <div>
                <%= link_to 'Publish Event', publish_event_path(@event) %>
              </div>  
            <% end %>
            <%= link_to 'Edit Event', edit_event_path(@event) %>
          </div>  
        <% end %>
        
      </div>
    </div>
    <div class="col-md-9 event-content">
      <div class="hero-img hidden-sm-down" style="background-image: url(<%= @event.hero_image_url %>); background-size: cover;"> </div>
      <div class="container">
        <h3> <span class="hot-event"><i class="fa fa-bell"></i>Hot:</span> <%= @event.name %> </h3>
        <div class="pull-left">
          <%= fa_icon 'clock-o' %>
        </div>
        <div class="time-details"> 
          <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
        </div>

        

        <div class="pull-left">
          <%= fa_icon 'map-marker' %>
        </div>
        <div class="venue-details">
         <%= @event.venue.name %>
         <br/>
         <%= @event.venue.full_address %>
        </div>

        <div class="img-spacer">
          <%= image_tag 'shadow-top.png' %>
        </div>
        <div class="extended-description">
          <%= @event.extended_html_description.html_safe %>
        </div>

      </div>  
    </div>
  </div>
</div>